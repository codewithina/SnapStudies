<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RightAnswerFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2F1F1F1" />

    <View
        android:id="@+id/endFragment"
        android:layout_width="292dp"
        android:layout_height="258dp"
        android:background="@drawable/gradient_right_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrongAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/right_answer1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/endFragment"
        app:layout_constraintStart_toStartOf="@+id/endFragment"
        app:layout_constraintTop_toTopOf="@+id/endFragment" />

    <TextView
        android:id="@+id/wrongAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/right_answer2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/endFragment"
        app:layout_constraintStart_toStartOf="@+id/endFragment"
        app:layout_constraintTop_toBottomOf="@+id/wrongAnswer1" />

    <TextView
        android:id="@+id/wrongAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/continue_right_wrong"
        app:layout_constraintEnd_toEndOf="@+id/endFragment"
        app:layout_constraintStart_toStartOf="@+id/endFragment"
        app:layout_constraintTop_toBottomOf="@+id/wrongAnswer2" />

</androidx.constraintlayout.widget.ConstraintLayout>